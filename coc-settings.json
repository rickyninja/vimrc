{
    "suggest.noselect": false,
    //"suggest.enablePreselect": false,
    "diagnostic.errorSign": "✘",
    "diagnostic.warningSign": "⚠",
    "diagnostic.infoSign": "?",
    "diagnostic.checkCurrentLine": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "html",
        //"json",
        "css",
        "scss",
        "go"
    ],
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        }
    },
    "go.goplsOptions": {
        "staticcheck": true
    }
}
